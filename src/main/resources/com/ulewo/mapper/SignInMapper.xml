<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ulewo.mapper.SignInMapper" >
  <resultMap id="BaseResultMap" type="com.ulewo.po.model.SignIn" >
    <result column="user_id" property="userId" jdbcType="INTEGER" />
    <result column="sign_date" property="signDate" jdbcType="DATE" />
    <result column="user_icon" property="userIcon" jdbcType="VARCHAR" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="sign_time" property="signTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="base_column_list" >
    sign_date,user_id,user_icon,user_name,sign_time
  </sql>
  
	<sql id="base_condition" >
		<where>
		      <if test="null!=userId" >
		        	and user_id = #{userId}
		      </if>
		      <if test="null!=curDate and ''!=curDate">
		        	and sign_date = DATE_FORMAT(#{curDate},'%Y-%m-%d')
		      </if>
		      <if test="null!=startDate and ''!=startDate">
		      		<![CDATA[
		        		and sign_date >= DATE_FORMAT(#{startDate},'%Y-%m-%d')
		        	]]>
		      </if>
		      <if test="null!=endDate and ''!=endDate">
		       		<![CDATA[
		        		and sign_date <= DATE_FORMAT(#{endDate},'%Y-%m-%d')
		        	]]>
		      </if>
		      <if test="null!=year and ''!=year">
		      	  <![CDATA[
		        	and sign_date >= STR_TO_DATE('${year}-00-00','%Y-%m-%d')
		        	and sign_date <= STR_TO_DATE('${year}-12-31','%Y-%m-%d')
		          ]]>
		      </if>
      </where>
  </sql>
  
  <select id="selectList" resultMap="BaseResultMap">
    select <include refid="base_column_list" />  from ulewo_sign_in <include refid="base_condition" /> order by sign_time asc
    <if test="page!=null">
    	limit #{page.start},#{page.end}
    </if>
  </select>
  
  <select id ="selectCount" resultType="java.lang.Integer">
    select count(1) from ulewo_sign_in <include refid="base_condition" />
  </select>
  
  <insert id="insert" parameterType="com.ulewo.po.model.SignIn" >
    insert into ulewo_sign_in (sign_date, user_id,user_icon,user_name,sign_time)
    values (#{signDate,jdbcType=DATE}, #{userId,jdbcType=INTEGER},#{userIcon,jdbcType=VARCHAR},#{userName,jdbcType=VARCHAR},#{signTime,jdbcType=TIMESTAMP})
  </insert>
  
</mapper>